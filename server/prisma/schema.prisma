// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Income {
  details    IncomeDetails  @relation(fields: [detailId], references: [id])
  detailId   Int
  category   IncomeCategory @relation(fields: [categoryId], references: [id])
  categoryId Int

  @@id([detailId, categoryId])
}

model IncomeDetails {
  id            Int      @id @default(autoincrement())
  income_title  String
  income_amount Float
  income        Income[]
}

model IncomeCategory {
  id         Int      @id @default(autoincrement())
  income_cat String
  income     Income[]
}

model Expense {
  id             Int      @id @default(autoincrement())
  expense_cat    String
  expense_title  String
  expense_amount Float
  submitted_date DateTime
}

model ExpenseCategory {
  id Int @id @default(autoincrement())
}
