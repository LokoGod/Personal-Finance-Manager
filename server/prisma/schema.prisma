generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Income {
  details    Income_Details  @relation(fields: [detailId], references: [id])
  detailId   Int
  category   Income_Category @relation(fields: [categoryId], references: [id])
  categoryId Int

  @@id([detailId, categoryId])
}

model Income_Details {
  id            Int    @id @default(autoincrement())
  income_title  String
  income_amount Float
  Income Income[]
}

model Income_Category {
  id         Int      @id @default(autoincrement())
  income_cat String
  Income     Income[]
}

model Expense {
  id             Int      @id @default(autoincrement())
  expense_cat    String
  expense_title  String
  expense_amount Float
  submitted_date DateTime
}

model Expense_Category {
  id Int @id @default(autoincrement())
}

