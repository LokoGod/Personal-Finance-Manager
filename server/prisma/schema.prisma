generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Payroll {
  id                Int                @id @default(autoincrement())
  title             String             @unique
  base_salary_type  String
  cycle_description String
  payroll_addition  Payroll_addition[]
  payroll_deduction Payroll_deduction[]
  payroll_overtime Payroll_overtime[]
}

model Payroll_addition {
  id                  Int     @id @default(autoincrement())
  addition_cat        String  @unique
  addition_percentage Int
  payroll             Payroll @relation(fields: [payrollId], references: [id])
  payrollId           Int

}

model Payroll_deduction {
  id                   Int    @id @default(autoincrement())
  deduction_cat        String @unique
  deduction_percentage Int
  payroll             Payroll @relation(fields: [payrollId], references: [id])
  payrollId           Int
}

model Payroll_overtime {
  id             Int @id @default(autoincrement())
  calculate_rate Int
  payroll Payroll @relation(fields: [payrollId], references: [id])
  payrollId Int
}

